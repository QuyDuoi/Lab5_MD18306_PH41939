<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi được nhấn -->
    <item android:state_pressed="true">
        <shape>
            <solid android:color="?attr/colorPrimaryVariant" /> <!-- Màu sắc khi được nhấn -->
            <corners android:radius="8dp" /> <!-- Định dạng góc -->
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape>
            <solid android:color="?attr/colorPrimary" /> <!-- Màu sắc mặc định -->
            <corners android:radius="8dp" /> <!-- Định dạng góc -->
        </shape>
    </item>
</selector>
